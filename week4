<html>
<head>
    <title>Week 4 - Julie Brodeur</title>
	<style>
		table, th, td {
  			border: 1px solid black;
			border-collapse: collapse;
			padding: 10px;
		}
	</style>
</head>
<body>
    <table>
        <script type=text/javascript>

			document.write('<tr style="color:blue; font-weight:bold;">');
			document.write('<td style="color:pink; font-weight:bold;">&#215;</td>');
			for (let col = 1; col <= 10; col++) {
				document.write('<td>' + col + '</td>');
			}
			document.write('</tr">');
			for (let row = 1; row <= 10; row++) {
				document.write('<tr>');
				document.write('<td style="color:red; font-weight:bold;">' + row + '</td>');

					for (let col = 1; col <= 10; col++) {
						if (col == row) {
							document.write('<td style="color: green; font-weight: bold;">' + row*col + '</td>');
						} 
						else {
							document.write('<td>' + row*col + '</td>');
						}
					}
			document.write('</tr>');

			}

       </script>
    </table>
</body>
</html>
